{
  "screens": [
    {
      "id": "another-screen",
      "components": [
        {
          "componentType": "Form",
          "gap": 4,
          "onSubmit": "PAY_WITH_DUCKS",
          "components": [
            {
              "componentType": "Container",
              "gap": 2,
              "components": [
                {
                  "componentType": "Text",
                  "text": "Pay with Ducks"
                },
                {
                  "componentType": "Text",
                  "text": "1. Open your Ducks app to get your Duck code."
                },
                {
                  "componentType": "Text",
                  "text": "2. Enter your Duck code below."
                },
                {
                  "componentType": "Input",
                  "hint": "1234",
                  "label": "Duck code",
                  "name": "duckCode"
                }
              ]
            },
            {
              "componentType": "Container",
              "gap": 50,
              "components": [
                {
                  "componentType": "Text",
                  "text": "Pay with Dogs"
                },
                {
                  "componentType": "Text",
                  "text": "1. Open your Dogs app to get your Dog code."
                },
                {
                  "componentType": "Text",
                  "text": "2. Enter your Dog code below."
                },
                {
                  "componentType": "Input",
                  "hint": "5678",
                  "label": "Dog code",
                  "name": "dogCode"
                }
              ]
            },
            {
              "componentType": "Button",
              "type": "submit",
              "text": "Pay"
            }
          ]
        }
      ]
    }
  ],
  "events": [
    {
      "type": "PAY_WITH_DUCKS",
      "actions": [
        {
          "type": "log",
          "args": [
            {
              "duckCode": "{{duckCode}}"
            },
            {
              "dogCode": "{{dogCode}}"
            }
          ]
        }
      ]
    }
  ]
}
